<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Sum of Numbers"
        android:textColor="@color/purple_700"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/input_Value1"
        android:layout_width="336dp"
        android:layout_height="54dp"
        android:layout_marginTop="132dp"
        android:ems="10"
        android:hint="Enter Value 1"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
    <Button
        android:id="@+id/Add_btn"
        android:layout_width="156dp"
        android:layout_height="52dp"
        android:layout_marginBottom="148dp"
        android:text="Add"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/input_Value2"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/input_Value2"
        app:layout_constraintTop_toBottomOf="@+id/Output_View"
        app:layout_constraintVertical_bias="0.717" />
    <TextView
        android:id="@+id/Output_View"
        android:layout_width="275dp"
        android:layout_height="52dp"
        android:layout_marginTop="28dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="@+id/input_Value2"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/input_Value2"
        app:layout_constraintTop_toBottomOf="@+id/input_Value2" />
    <EditText
        android:id="@+id/input_Value2"
        android:layout_width="336dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Enter Value 2"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/input_Value1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_Value1"
        app:layout_constraintTop_toBottomOf="@+id/input_Value1" />
</androidx.constraintlayout.widget.ConstraintLayout>